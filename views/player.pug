extends layout
block head_others
  link(rel='stylesheet', href='/ccl/style.css')
  script(src='/ccl/CommentCoreLibrary.js')
  script(src='/jquery-3.1.1.min.js')
  script(src='/socket.io-1.4.5.js')
  script(src='/stage.js')

block content
  div(id="wrapper")
    div(id="curtain" class="abp")
      div(id="stage" class="container")
      video(id="vplayer" autobuffer="true" data-setup="{}" width="100%" height="100%" preload="auto")
      img(id="image")
      audio(id="aplayer" controls)
      div(id="layer_lot")
        h2(id="lot_title")
        div(id="roll")
          img(id="roll_avatar")
          p(id="roll_nick")
        div(id="winners")
          ul
